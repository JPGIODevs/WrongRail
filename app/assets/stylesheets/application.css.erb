@media (min-width: 485px){
  .nav-link{
    font-size: 3vh;
  }
  .desktop{
    display: block;
  } 
  .mobile{
    display: none;
  }
  .navlogo{
    margin-left: auto;
    position: absolute;
    right: 1dvw;
  }
}

@media (max-width: 485px){
  .nav-link{
    font-size: 3vw;
  } 
  .desktop{
    display: none;
  } 
  .mobile{
    display: block;
  }
  .navlogo{
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }

}

body, html{
  color: white;
  height: 100%;
  background: #9fb2f6 url(<%= asset_path "lightback.png" %>) no-repeat;
  background-size: cover;
  margin: 0;
  min-height: calc(100% + env(safe-area-inset-top));
  padding-top: env(safe-area-inset-top);
  display: flex;
  flex-direction: column;
}
.storeitem{
  width: 20%;
}
.link{
  text-decoration: none;
}
.nav-text{
  font-family: monospace; 
  font-size: 1.25rem;
}
.glownav{
  color: white;
  text-shadow: white 0px 0 4px;
}
.altglownav{
  color: white;
  text-shadow: black 0px 0 4px;
}
.navlogo{
  width: 15vw;
  filter: invert(1);  
}
.navlogoleft{
  margin-top: 2vh;
  width: 5vw;
  filter: invert(1);
  position: absolute;
  top: 1vh;
  left: 1vw;
}
.position{
  text-align: center;
  font-size: 1.5vh;
  color: #999;
}
.footer{
  margin-top: auto;
  left: 0;
  bottom: 0;
  width: 100dvw;
  border: 1px solid #ddd;
  background: white;
  display: block;
}
.footcontainer{
  margin-left: auto;
  margin-right: auto;
  padding: 0 2.75rem 0;
  display: inherit;
}
.footercontents{
  width: 100dvw;
  display: flex;
  flex-wrap: wrap;
  margin-left: -0.75rem;
  margin-right: -0.75rem;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  padding-top: 1.5rem;
  padding-bottom: 1.5rem;
}
.footerlinks{
  display: flex;
  flex: 0 0 33.333333%;
  justify-content: space-around;
  max-width: 33.333333%;
}
.socialicon{
  text-decoration: none;
}
.iconimage{
  width: 2dvw;
}
.footercopyright{
  color: #6d6d6d;
  text-align: left;
  font-size: .75rem;
  font-weight: 400;
  line-height: 1.125rem;
  padding: 0 0.5rem;
  text-decoration: none;
  text-transform: none;
  margin-left: 2vw;
}
