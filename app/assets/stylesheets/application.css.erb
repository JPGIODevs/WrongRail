@media (min-width: 485px){
  .nav-link{
    font-size: 3vh;
  }
  .desktop{
    display: block;
  } 
  .mobile{
    display: none;
  }
  .navlogo{
    margin-left: auto;
    position: absolute;
    right: 1dvw;
  }
}

@media (max-width: 485px){
  .nav-link{
    font-size: 3vw;
  } 
  .desktop{
    display: none;
  } 
  .mobile{
    display: block;
  }
  .navlogo{
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }

}

body, html{
  color: white;
  height: 100%;
  background: #9fb2f6 url(<%= asset_path "lightback.png" %>) no-repeat;
  background-size: cover;
  padding: env(safe-area-inset-top);
  margin: 0;
}
.storeitem{
  width: 20%;
}
.link{
  text-decoration: none;
}
.nav-text{
  font-family: monospace; 
  font-size: 1.25rem;
}
.glownav{
  color: white;
  text-shadow: black 0px 0 4px;
}
.altglownav{
  color: white;
  text-shadow: white 0px 0 4px;
}
.navlogo{
  width: 15vw;
  filter: invert(1);  
}

