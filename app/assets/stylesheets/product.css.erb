.storemain{
  margin: 0;
  padding: 0;
}
.storemain-frame{
  left: 3vw;
  padding: 10px;
  background-color: rgba(255,255,255,0.5);
  backdrop-filter: blur(15px);
  border-radius: 15px;
  box-shadow: 0 0 20px 15px rgba(255,255,255,0.5) ;
  width: 35dvw;
  height: 80%;
  background-position: center center;
  background-repeat: no-repeat;
  overflow: hidden; 
}
.navbar{
  top: 2vh;
}
.productwrapper{
  padding: 2vh 5vw;
  display: flex;
  flex-direction: row;
}
.mainphoto{
  width: 35dvw;
  border-radius: 10px;
}
.largeframe{
}
.secondaryphotos{
  flex-grow: 2;
}
.secondaryphoto{
  width: 10dvw;
  padding: 10px;
  background-color: rgba(255,255,255,0.5);
  backdrop-filter: blur(15px);
  border-radius: 15px;
  box-shadow: 0 0 10px 5px rgba(255,255,255,0.5) ;
}
.formfield{
  width: 100%;
}
.shadowtext{
  text-shadow: 2px 2px 5px black;
}
#productdetails{
  margin-top: none;
}
