<div>
  <%= form_with(model: product) do |form| %>
    <% if product.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mt-3">
      <%= form.label :name, class: "form-label", style: "display: block" %>
      <%= form.text_field :name, class: "form-control w-50" %>
    </div>

    <div class="mt-3">
      <%= form.label :photos, class: "form-label" %>
      <%= form.file_field :photos, multiple: true, class: "form-control w-50" %>
    </div>

    <div class="mt-3">
      <%= form.label :description, class:"form-label", style: "display: block" %>
      <%= form.text_area :description, class: "form-control w-50" %>
    </div>

    <div class="mt-3">
      <%= form.label :price, class: "form-label", style: "display: block" %>
      <%= form.text_field :price, class: "form-control w-50" %>
    </div>

    <div class="mt-3">
      <%= form.submit class: "btn btn-outline-light" %>
    </div>
  <% end %>
</div>
