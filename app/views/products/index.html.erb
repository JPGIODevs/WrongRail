<p style="color: green"><%= notice %></p>

<div class="m-5">
  <h1>Products</h1>

  <div id="products">
    <% @products.each do |product| %>
      <%= render product %>
      <p><%= product.name %></p>
      <p>
      <%= link_to "Show this product", product %>
      </p>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <%= link_to "New product", new_product_path %>
  <% end %>
</div>
